@model IEnumerable<senproject.Models.Report>

@{
    ViewBag.Title = "Index";
}

<h2>Report Management</h2>

@using (Html.BeginForm())
{
    <p>
        Find by UserName: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StarRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResolutionStartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResolutionEndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResolutionStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResolutionEndTime)
            </td>
            <td>@item.Date.ToShortDateString()</td>
          
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
